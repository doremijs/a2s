{
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "typeRoots": ["./typings", "./node_modules/@types"],
    },
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "typings/*"],
  "exclude": ["src/services"]
}